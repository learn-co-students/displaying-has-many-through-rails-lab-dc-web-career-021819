<h1><%= @doctor.name %>'s Page</h1>
  <h2>Department: <%= @doctor.department %></h2>
  <ul>
    <% @doctor.appointments.each do |a| %>
      <li><%= (a.appointment_datetime).strftime('%B %d, %Y') %> at <%= (a.appointment_datetime).strftime('%H:%M') %>, with <%= link_to a.patient.name, patient_path(a.patient) %></li>

    <% end %>
  </ul>
